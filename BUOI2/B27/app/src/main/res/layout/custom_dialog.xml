<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:backgroundTint="#121111"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm mới Album"
        android:textColor="@color/white"
        android:textSize="20dp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:text="Mã tác giả:"
            android:textColor="@color/white"
            android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/editDialogCode"
            android:layout_width="301dp"
            android:layout_height="47dp"
            android:background="@color/white"
            android:textColor="@color/black"></EditText>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:text="Tên tác giả:"
            android:textColor="@color/white"
            android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/editDialogName"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/white"
            android:textColor="@color/black"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:id="@+id/btnDialogClear"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="2"
            android:backgroundTint="#B3B3B3"
            android:text="Xóa Trắng"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnDialogSave"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|clip_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:backgroundTint="#D6CECE"
            android:text="Lưu Album này"
            android:textAllCaps="false"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>